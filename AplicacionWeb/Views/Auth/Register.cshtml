@model AplicacionWeb.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>

    <section class="vh-100 bg-light" >
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">

                            <div class="col-md-6 col-lg-5 d-none d-md-flex align-items-center">
                                <img src="/img/Register.jpg"
                                     alt="login form" class="img-fluid pt-xl-4" style="border-radius: 1rem 0 0 1rem;" />
                            </div>


                            <div class="col-md-6 col-lg-7 d-flex align-items-center shadow">
                                <div class="card-body p-3 p-lg-3 text-dark">

                                    <form asp-controller="Auth" asp-action="Register" method="post" novalidate>

                                        <div class="d-flex align-items-center mb-3 pb-1 text-dark">
                                            <i class="fas fa-cubes fa-2x me-3 " style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Logo</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3 text-uppercase" style="letter-spacing: 1px;">Registrarse</h5>

                                        <div class="form-outline mb-4">
                                            <label class="form-label  text-uppercase" for="Nombre">Nombre</label>
                                            <input type="text" id="Nombre" class="form-control form-control-lg text-secondary" required asp-for="Nombre" />
                                        </div>
                                         
                                        <div class="form-outline mb-4">
                                            <label class="form-label text-uppercase" for="Usuario">Usuario</label>
                                            <input type="text" id="Usuario" class="form-control form-control-lg text-secondary" asp-for="Nombreusuario" required />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label text-uppercase" for="Correo">Correo Electronico</label>
                                            <input type="email" id="Correo" class="form-control form-control-lg text-secondary" required asp-for="Correo" />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label text-uppercase" for="Password">Contraseña</label>
                                            <input type="password" id="Password" class="form-control form-control-lg text-secondary" required asp-for="Password" />
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block text-uppercase" type="submit">Registrarse</button>
                                        </div>

                                        @if (ViewData["Mensaje"] != null)
                                        {

                                            <div class="form-group">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                </div>
                                            </div>
                                        }

                                        <p class="mb-5 pb-lg-2 text-uppercase text-dark">
                                            ¿No tienes una cuenta? <a href="@Url.Action("Login","Auth")"
                                                                      class="text-primary text-decoration-none">Inicia Sesión</a>
                                        </p>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
